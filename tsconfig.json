{
    "compilerOptions": {
      "target": "ES6",                          // Compile to ES6 JavaScript
      "lib": ["DOM", "DOM.Iterable", "ESNext"],// Include DOM and ESNext libs
      "allowJs": true,                         // Allow JavaScript files alongside TS
      "skipLibCheck": true,                    // Skip type checking of declaration files for faster build
      "esModuleInterop": true,                 // Support default imports from CommonJS modules
      "allowSyntheticDefaultImports": true,   // Allow default imports from modules with no default export
      "strict": true,                          // Enable all strict type-checking options
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",                      // Use ES modules
      "moduleResolution": "Node",
      "resolveJsonModule": true,               // Allow importing JSON files
      "isolatedModules": true,                 // Ensure each file can be transpiled independently
      "noEmit": true,                          // Do not emit output (handled by bundler)
      "jsx": "react-jsx",                      // Use the new React 17+ JSX transform
      "rootDir": ".",
    },

    //"include": ["src", "./**/*"],              // Include all files in src folder and match pattern
  }
  